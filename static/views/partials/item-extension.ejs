<div class="box box-widget widget-user">
    <!-- extension bg image -->
    <div class="widget-user-header bg-black" style="height: 140px;background-image: url(<%= image %>);
            background-repeat: no-repeat;
            -webkit-background-size: contain;background-size: cover;">
        <!--<h3 class="widget-user-username">Elizabeth Pierce</h3>-->
        <!--<h5 class="widget-user-desc">Web Designer</h5>-->
    </div>
    <div class="box-body">
        <!-- name -->
        <div style="font-size: 20px"><%= name%></div>
        <div>
            <!-- tag -->
            <div class="btn-group">
                <button type="button" class="btn btn-box-tool dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-tags"> <%= tag ? tag.length : 0 %></i>
                </button>
                <% if(tag && tag.length > 0) { %>
                <ul class="dropdown-menu" role="menu">
                    <% for (var i = 0; i < tag.length; i++) { %>
                    <li style="position:relative">
                        <a><%= tag[i] %></a>
                        <div style="position:absolute;right:10px;top:0px" class="pull-right">
                            <button type="button" class="btn btn-box-tool">
                                <i class="fa fa-trash"></i>
                            </button>
                        </div>
                    </li>
                    <% } %>
                </ul>
                <% } %>
            </div>
            <!-- size -->
            <div class="pull-right">
                <div style="display: inline-block; font-size: 18px"><%= size %></div>
            </div>
        </div>
    </div>
</div>